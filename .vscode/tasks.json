{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "bash -c make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run BGB",
            "type": "shell",
            // TODO: Don't hard-code the binary location!
            "command": "& bgb -rom ${workspaceRoot}\\bin\\rom.gb -watch",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}